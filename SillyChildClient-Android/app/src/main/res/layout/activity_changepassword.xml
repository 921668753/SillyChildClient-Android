<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone"
            style="@style/AutoMatch"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/enterAccount"
            android:paddingLeft="@dimen/dimen15"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintColors"
            android:textSize="@dimen/dimen14"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="@dimen/dimen85"
            android:layout_height="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@drawable/shape_login1"
            android:gravity="center"
            android:text="@string/testGetCode"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize14" />

    </LinearLayout>

    <include layout="@layout/common_dividerwidth1"/>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen45"
        android:hint="@string/errorCode"
        android:textColorHint="@color/hintColors"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen14"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:singleLine="true"/>

    <View style="@style/DividerWidth" />

    <TextView
        android:id="@+id/tv_nextstep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:background="@drawable/shape_login"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginLeft="@dimen/dimen15"
        android:gravity="center"
        android:text="@string/nextStep"
        android:textColor="@color/whiteColors"
        android:textSize="@dimen/textsize16"/>

</LinearLayout>