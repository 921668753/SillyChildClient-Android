<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebarl"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_back"
        style="@style/WrapWrap"
        android:padding="@dimen/dimen15"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/WrapWrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize18"
        android:textStyle="bold" />

    <LinearLayout
        style="@style/WrapWrap"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dimen15">

        <TextView
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen48"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/travelCity"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/dimen65"
            android:layout_height="@dimen/dimen48"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen5"
            android:singleLine="true"
            android:text="11111111"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:src="@mipmap/down1" />

    </LinearLayout>


</RelativeLayout>