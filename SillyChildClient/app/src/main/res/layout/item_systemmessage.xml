<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@drawable/shape_systemmessage"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen15">

    <RelativeLayout
        android:layout_width="@dimen/dimen44"
        android:layout_height="@dimen/dimen44">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dimen40"
            android:layout_height="@dimen/dimen40"
            android:layout_centerVertical="true"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/tv_messageTag"
            android:layout_width="@dimen/dimen12"
            android:layout_height="@dimen/dimen12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen3"
            android:background="@drawable/shape_homepage_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize8"
            android:visibility="visible" />

    </RelativeLayout>


    <LinearLayout
        style="@style/AutoWrap"
        android:layout_marginLeft="@dimen/dimen10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen17"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                style="@style/WrapWrap"
                android:maxWidth="@dimen/dimen300"
                android:singleLine="true"
                android:text="订单消息"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/AutoWrap"
                android:gravity="right"
                android:text="12:12"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize13" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_content"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen10"
            android:singleLine="true"
            android:text="曼谷，是泰国首都和最大城市，别名“天使之城”中……"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

</LinearLayout>