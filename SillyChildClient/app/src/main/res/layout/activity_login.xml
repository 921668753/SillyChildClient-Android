<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/whiteColors"
    android:fitsSystemWindows="true">


    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <RelativeLayout
            style="@style/MatchMatch"
            android:background="@color/whiteColors">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen250"
                android:scaleType="fitXY"
                android:src="@mipmap/loginbackground" />


            <LinearLayout
                android:id="@+id/ll_login"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/dimen20"
                android:layout_marginRight="@dimen/dimen20"
                android:layout_marginTop="@dimen/dimen186"
                android:background="@drawable/shape_loginbox"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen40"
                android:paddingRight="@dimen/dimen40">


                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen32"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen15"
                        android:layout_height="@dimen/dimen19"
                        android:layout_marginTop="@dimen/dimen10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/shouji" />

                    <EditText
                        android:id="@+id/et_accountNumber"
                        style="@style/AutoMatch"
                        android:layout_marginLeft="@dimen/dimen25"
                        android:background="@color/whiteColors"
                        android:digits="@string/number0"
                        android:hint="@string/hintAccountText"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingTop="@dimen/dimen10"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/hintColors"
                        android:textCursorDrawable="@drawable/shape_cursor"
                        android:textSize="@dimen/textsize13" />


                    <ImageView
                        android:id="@+id/img_quxiao"
                        android:layout_width="@dimen/dimen35"
                        android:layout_height="@dimen/dimen29"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen14"
                        android:src="@mipmap/delete"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    style="@style/DividerWidth"
                    android:layout_marginTop="@dimen/dimen3" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen28"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen15"
                        android:layout_height="@dimen/dimen19"
                        android:layout_marginTop="@dimen/dimen10"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mima" />

                    <EditText
                        android:id="@+id/et_pwd"
                        style="@style/AutoMatch"
                        android:layout_marginLeft="@dimen/dimen25"
                        android:background="@color/whiteColors"
                        android:hint="@string/hintPasswordText"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingTop="@dimen/dimen10"
                        android:singleLine="true"
                        android:textColorHint="@color/hintColors"
                        android:textCursorDrawable="@drawable/shape_cursor"
                        android:textSize="@dimen/textsize13" />

                    <ImageView
                        android:id="@+id/img_quxiao1"
                        android:layout_width="@dimen/dimen35"
                        android:layout_height="@dimen/dimen29"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen14"
                        android:src="@mipmap/delete"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/img_yanjing"
                        android:layout_width="@dimen/dimen35"
                        android:layout_height="@dimen/dimen29"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen12"
                        android:src="@mipmap/yanjing" />

                </LinearLayout>

                <TextView
                    style="@style/DividerWidth"
                    android:layout_marginTop="@dimen/dimen3" />

                <TextView
                    android:id="@+id/tv_forgotPassword"
                    style="@style/WrapWrap"
                    android:layout_gravity="right"
                    android:paddingBottom="@dimen/dimen20"
                    android:paddingTop="@dimen/dimen20"
                    android:text="@string/forgotPassword"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_login"
                    style="@style/Match44"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dimen35"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@drawable/shape_login"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/whiteColors"
                    android:textSize="@dimen/textsize16" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_thirdpartylogin"
                style="@style/MatchWrap"
                android:layout_below="@id/ll_login"
                android:layout_marginTop="@dimen/dimen35"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen38"
                android:paddingRight="@dimen/dimen38">

                <View
                    style="@style/AutoMatch"
                    android:layout_height="@dimen/dimen1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/longinotherdividerbg" />

                <TextView
                    style="@style/WrapWrap"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:text="@string/thirdpartylogin"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/textsize12" />

                <View
                    style="@style/AutoMatch"
                    android:layout_height="@dimen/dimen1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/longinotherdividerbg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_thirdpartylogin1"
                style="@style/WrapWrap"
                android:layout_below="@id/ll_thirdpartylogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen34"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_loginweixin"
                    android:layout_width="@dimen/dimen51"
                    android:layout_height="@dimen/dimen51"
                    android:layout_marginRight="@dimen/dimen62"
                    android:src="@mipmap/weixin" />


                <ImageView
                    android:id="@+id/img_loginqq"
                    android:layout_width="@dimen/dimen51"
                    android:layout_height="@dimen/dimen51"
                    android:src="@mipmap/qq" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_register"
                style="@style/WrapWrap"
                android:layout_below="@id/ll_thirdpartylogin1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen35"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen25">


                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/noAccount"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/textsize13" />


                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/register1"
                    android:textColor="@color/loginBackgroundColors"
                    android:textSize="@dimen/textsize13" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout style="@style/Match44">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen39"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:src="@mipmap/loginback" />

        <TextView
            style="@style/WrapWrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize17" />
    </RelativeLayout>
</RelativeLayout>