<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match50"
        android:layout_marginTop="@dimen/dimen15"
        android:background="@color/whiteColors"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_nickname"
            style="@style/AutoMatch"
            android:background="@color/whiteColors"
            android:hint="@string/nicknamehint"
            android:maxLength="20"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:textColor="@color/titletextcolors"
            android:textColorHint="@color/hintColors"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/textsize16" />

        <ImageView
            android:id="@+id/img_quxiao"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:padding="@dimen/dimen15"
            android:src="@mipmap/delete"
            android:visibility="gone" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen15"
        android:paddingTop="@dimen/dimen10"
        android:text="@string/sillyChildNumberWords"
        android:textColor="@color/hintColors"
        android:textSize="@dimen/textsize15"
        android:visibility="gone" />


</LinearLayout>